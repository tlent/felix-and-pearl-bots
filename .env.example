# Discord webhook URLs for both bots
FELIX_DISCORD_WEBHOOK_URL=your_felix_discord_webhook_url
PEARL_DISCORD_WEBHOOK_URL=your_pearl_discord_webhook_url

# Anthropic API key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenWeather API key
WEATHER_API_KEY=your_weather_api_key

# Weather location
WEATHER_LOCATION=City,State,Country

# Weather coordinates (required for OpenWeather One Call API 3.0)
WEATHER_LAT=40.7128
WEATHER_LON=-74.0060

# Timezone for the bot
TZ=America/New_York

# Birthday configuration (JSON string)
BIRTHDAYS_CONFIG={"MM-DD": {"name": "display_name"}}

# Test mode (set to "true" to prevent actual Discord messages)
TEST_MODE=false 